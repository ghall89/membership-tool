---
import Layout from '@layouts/Layout.astro';
import createMember from '@utils/db/createMember';
import type { CreateParams } from '../types';

import InputField from '@components/Forms/InputField.astro';
import SelectField from '@components/Forms/SelectField.astro';

if (Astro.request.method === 'POST') {
  try {
    const data = await Astro.request.formData();

    const params: CreateParams = {
      name: data.get('name'),
      email: data.get('email'),
      memberSize: data.get('memberSize'),
      startDate: new Date(),
      lengthInYrs: data.get('lengthInYrs'),
    };

    await createMember(params);
  } catch (error) {
    if (error instanceof Error) {
      console.error(error.message);
    }
  }
}
---

<Layout title="Add Member">
  <form method="POST" class="flex w-96 flex-col gap-4 rounded-md p-4 shadow">
    <InputField
      label="Name"
      isRequired
      type="text"
      name="name"
      id="name-field"
    />
    <InputField
      label="Email"
      isRequired
      type="email"
      name="email"
      id="email-field"
    />
    <InputField label="Phone" type="text" name="phone" id="phone-field" />
    <InputField
      label="Address One"
      type="text"
      name="address1"
      id="address-one-field"
    />
    <InputField
      label="Address Two"
      type="text"
      name="address2"
      id="address-two-field"
    />
    <InputField label="City" type="text" name="city" id="city-field" />

    <SelectField
      label="State"
      name="state"
      id="state-select"
      options={['RI', 'MA', 'CT']}
    />

    <InputField label="ZIP" type="text" name="zip" id="zip-field" />
    <hr />
    <SelectField
      label="Number of Members"
      name="memberSize"
      id="member-size-select"
      options={[4, 5, 6, 7, 8, 9, 10]}
    />

    <SelectField
      label="Length (Years)"
      name="lengthInYrs"
      id="membership-length-select"
      options={[1, 2, 3, 4]}
    />

    <button
      class="rounded-md bg-sky-300 px-5 py-2 text-white hover:bg-sky-200 active:bg-sky-400"
      type="submit">Submit</button
    >
  </form>
</Layout>
