---
interface Props {
  label: string;
  name: string;
  id: string;
  type: 'text' | 'number' | 'email' | 'password';
  isRequired?: boolean;
}

const { label, isRequired = false, type, name, id } = Astro.props;
---

<div class="col mb-3">
  <label for={name}>{label}</label>
  <input
    class="form-control"
    required={isRequired}
    type={type}
    name={name}
    id={id}
  />
  <div class="valid-feedback">
    {`Please provide a valid ${label}`}
  </div>
</div>
